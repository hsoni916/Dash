<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/NewCustomer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:text="@string/new_customer"
        android:textSize="11sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:drawableTop="@drawable/add"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/NewInvoice"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:textSize="11sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/new_invoice"
        android:drawableTop="@drawable/invoice"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/NewCustomer"/>

    <Button
        android:id="@+id/AddInventory"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:textSize="11sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/add_inventory"
        android:drawableTop="@drawable/inventory"
        android:backgroundTint="@color/mattegrey1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/NewInvoice"/>

</androidx.constraintlayout.widget.ConstraintLayout>