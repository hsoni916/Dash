<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/OrderItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="560dp"
    android:layout_height="56dp"
    android:padding="0dp"
    android:layout_margin="4dp"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/order_item_background">

    <ImageView
        android:id="@+id/ProfilePicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/textview_background_3"
        android:backgroundTint="@color/mattegrey"
        android:src="@drawable/profile"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/OrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="#0810023-01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/CustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Harsh Patalia"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/OrderNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/OrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textSize="12sp"
        android:text="25 May, 2023"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@id/DDIV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/DDIV"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/clock"
        android:padding="2dp"
        android:background="@drawable/clock_background"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/DeliveryDate"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/DeliveryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:text="25 May, 2023"
        android:textStyle="italic"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/alertView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        android:textStyle="italic"
        android:visibility="visible"
        android:textColor="#F44336"
        app:layout_constraintTop_toBottomOf="@id/DeliveryDate"
        app:layout_constraintStart_toStartOf="@id/DeliveryDate"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="X"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/CustomerName"
        app:layout_constraintEnd_toStartOf="@id/OrderDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/ItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:text="5 items"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/X"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>