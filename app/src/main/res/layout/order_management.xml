<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/center"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/OrderList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/center"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/OrderForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:translationZ="8dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/center"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/LabelOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="Order Date:"
            android:layout_marginTop="4dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/order_date_etv"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:background="@drawable/etv_background"
            app:layout_constraintStart_toEndOf="@id/LabelOne"
            app:layout_constraintTop_toTopOf="@id/LabelOne"
            app:layout_constraintBottom_toBottomOf="@id/LabelOne"/>

        <TextView
            android:id="@+id/LabelTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="Deliver On:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LabelOne"/>

        <EditText
            android:id="@+id/Owner_etv"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:maxLines="1"
            android:background="@drawable/etv_background"
            app:layout_constraintStart_toStartOf="@id/order_date_etv"
            app:layout_constraintTop_toTopOf="@id/LabelTwo"
            app:layout_constraintBottom_toBottomOf="@id/LabelTwo"/>

        <TextView
            android:id="@+id/LabelThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="Items:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LabelTwo"/>

        <ListView
            android:id="@+id/ItemHolder"
            android:layout_width="320dp"
            android:layout_height="88dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintStart_toStartOf="@id/order_date_etv"
            app:layout_constraintTop_toTopOf="@id/LabelThree"/>

        <TextView
            android:id="@+id/LabelFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="Pictures:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ItemHolder"/>

        <GridView
            android:id="@+id/JewelleryPictures"
            android:layout_width="360dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="@id/LabelFour"
            app:layout_constraintStart_toStartOf="@id/order_date_etv"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/OrderPlaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_order_tv"
        android:textSize="16sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/center"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/clear_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:textSize="14sp"
        android:text="@string/cancel"
        android:enabled="false"
        android:textColor="@color/mattegrey1"
        android:layout_margin="16dp"
        android:backgroundTint="@color/mattewhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button1"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:textSize="14sp"
        android:text="@string/update_supplier"
        android:layout_margin="16dp"
        android:enabled="false"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/OrderList"/>

</androidx.constraintlayout.widget.ConstraintLayout>