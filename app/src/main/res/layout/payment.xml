<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="520dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/popup_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/payment_method"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/payment_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/upilayout"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/gpay"
            android:background="@drawable/radio_background"
            android:scaleType="fitCenter">
        </ImageButton>
        <ImageButton
            android:id="@+id/paytmlayout"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/radio_background"
            android:scaleType="fitCenter"
            android:src="@drawable/paytm">
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/payment_row"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/cashlayout"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/cashapp"
            android:background="@drawable/radio_background"
            android:scaleType="fitCenter">
        </ImageButton>

        <ImageButton
            android:id="@+id/cardlayout"
            android:background="@drawable/radio_background"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/card"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:orientation="horizontal">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/payment_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/payment_row_2"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Discount [ if any ] :"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/Discount_etv"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/etv_background"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:inputType="numberSigned"/>
    </LinearLayout>
    <TextView
        android:id="@+id/error_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_payment"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:drawablePadding="8dp"
        android:padding="4dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/payment_row_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:drawableLeftCompat="@drawable/error" />

    <Button
        android:id="@+id/save_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Proceed"
        android:padding="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/error_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/close_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:padding="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/mattewhite"
        app:layout_constraintTop_toBottomOf="@id/error_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save_payment"/>

</androidx.constraintlayout.widget.ConstraintLayout>