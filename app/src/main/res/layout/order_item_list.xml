<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_marginBottom="4dp"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/order_item_background">

    <ImageView
        android:id="@+id/ItemPicture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:background="@drawable/cardview_bg"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ItemWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:text="2 gms"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/ItemName"
        app:layout_constraintEnd_toStartOf="@id/ItemCategory"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:textSize="16sp"
        android:text="22K916"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/ItemName"
        app:layout_constraintEnd_toStartOf="@id/EditDetails"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Solitaire Ring"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ItemPicture"/>




    <ImageView
        android:id="@+id/EditDetails"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:textStyle="normal"
        android:src="@drawable/edit"
        android:layout_marginEnd="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/Remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="11sp"
        android:text="Size 22"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ItemPicture"
        app:layout_constraintBottom_toBottomOf="@id/ItemPicture"/>

</androidx.constraintlayout.widget.ConstraintLayout>