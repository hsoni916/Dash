<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_background"
    android:elevation="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/centre_right"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:visibility="invisible"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/progress_circular"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@+id/centre_left"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:focusable="false"
        android:visibility="invisible"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/progress_circular"/>


    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="@id/name_etv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_etv" />

    <AutoCompleteTextView
        android:id="@+id/name_etv"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/label1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/NameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="11sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/warning"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/name_etv" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone_etv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/phone_etv" />

    <AutoCompleteTextView
        android:id="@+id/phone_etv"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/NameError" />

    <TextView
        android:id="@+id/PhoneError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="11sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/warning"
        app:layout_constraintStart_toStartOf="@id/phone_etv"
        app:layout_constraintTop_toBottomOf="@id/phone_etv" />


    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/rate"
        app:layout_constraintBottom_toBottomOf="@id/RateChoices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/RateChoices" />

    <RadioGroup
        android:id="@+id/RateChoices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/PhoneError"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintEnd_toEndOf="@id/name_etv">
        <RadioButton
            android:id="@+id/RateFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Fix"/>
        <RadioButton
            android:id="@+id/RateUnFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Unfix"/>
    </RadioGroup>

    <EditText
        android:id="@+id/Rate"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        android:visibility="gone"
        android:inputType="numberDecimal"
        android:hint="Rate Per 10gm."
        app:layout_constraintStart_toEndOf="@id/RateChoices"
        app:layout_constraintTop_toTopOf="@id/RateChoices"
        app:layout_constraintBottom_toBottomOf="@id/RateChoices"/>

    <TextView
        android:id="@+id/label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/AdAmount"
        app:layout_constraintBottom_toBottomOf="@id/cash_etv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cash_etv" />


    <EditText
        android:id="@+id/cash_etv"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/RateChoices" />
    
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/MetalOrCash"
        android:layout_width="240dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="44dp"
        android:padding="0dp"
        app:singleSelection="true"
        app:checkedButton="@id/cash"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/cash_etv"
        app:layout_constraintTop_toTopOf="@id/cash_etv"
        app:layout_constraintBottom_toBottomOf="@id/cash_etv">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_500"
            android:textSize="11sp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/gram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metal"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="11sp"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>


    <androidx.cardview.widget.CardView
        android:id="@+id/OrderDateCardView"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cash_etv"
        app:layout_constraintStart_toStartOf="@id/label1">
        <EditText
            android:id="@+id/date_etv"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:hint="@string/OrderDateString"
            android:paddingStart="6dp"
            android:inputType="date"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/etv_background_1"/>
        <ImageButton
            android:id="@+id/datePicker"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/date"
            android:background="@color/white"
            android:layout_gravity="end|center_vertical"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/DeliveryDateCardView"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/cash_etv"
        app:layout_constraintStart_toEndOf="@id/OrderDateCardView">
        <EditText
            android:id="@+id/delivery_date_etv"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:hint="@string/DeliveryDate"
            android:paddingStart="8dp"
            android:inputType="date"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/etv_background_1"/>
        <ImageButton
            android:id="@+id/delivery_datePicker"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/date"
            android:background="@color/white"
            android:layout_gravity="end|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/add_item_1"
        app:layout_constraintStart_toStartOf="@id/label1"
        app:layout_constraintTop_toBottomOf="@id/OrderDateCardView"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="4dp"
        android:visibility="invisible"
        android:layout_marginTop="12dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/label4"
        app:layout_constraintStart_toStartOf="@id/OrderItemsList"
        app:layout_constraintEnd_toEndOf="@id/OrderItemsList">

        <TextView
            android:id="@+id/h1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:text="Item Name  "
            android:paddingStart="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:text="N. W."/>

        <TextView
            android:id="@+id/h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Carat"
            android:paddingStart="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:text="Size "/>

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="2dp"
            android:layout_weight="0.05"
            android:visibility="invisible"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera"/>

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="2dp"
            android:layout_weight="0.05"
            android:visibility="invisible"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NewItemAdd"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header">

        <AutoCompleteTextView
            android:id="@+id/ItemName"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1.5"
            android:inputType="text"
            android:dropDownAnchor="@id/h1"
            android:dropDownHeight="100dp"
            android:dropDownWidth="200dp"
            android:dropDownVerticalOffset="5dp"
            android:dropDownHorizontalOffset="0dp"
            android:hint="Item Name."
            android:paddingStart="6dp"
            android:background="@drawable/etv_background"/>

        <EditText
            android:id="@+id/ItemWeight"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:inputType="numberDecimal"
            android:hint="N.W"
            android:paddingStart="6dp"
            android:background="@drawable/etv_background"/>

        <AutoCompleteTextView
            android:id="@+id/ItemCarat"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:inputType="text"
            android:dropDownAnchor="@id/h2"
            android:dropDownHeight="120dp"
            android:dropDownWidth="200dp"
            android:textAlignment="center"
            android:dropDownVerticalOffset="5dp"
            android:dropDownHorizontalOffset="0dp"
            android:hint="22K916"
            android:paddingStart="6dp"
            android:background="@drawable/etv_background"/>

        <EditText
            android:id="@+id/ItemSize"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:inputType="numberDecimal"
            android:hint="Size"
            android:paddingStart="6dp"
            android:background="@drawable/etv_background"/>

        <ImageButton
            android:id="@+id/CameraBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0.05"
            android:layout_marginStart="8dp"
            android:elevation="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:src="@drawable/camera"/>

        <ImageButton
            android:id="@+id/SaveBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0.05"
            android:layout_marginStart="8dp"
            android:elevation="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:src="@drawable/save_item"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/OrderItemsList"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/remarks_etv"
        app:layout_constraintStart_toStartOf="@id/label4"
        app:layout_constraintEnd_toEndOf="@id/centre_right"
        tools:listitem="@layout/new_item_saved"
        tools:itemCount="2"/>

    <TextView
        android:id="@+id/label9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remarks:"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"

        app:layout_constraintBottom_toBottomOf="@id/remarks_etv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/remarks_etv" />

    <EditText
        android:id="@+id/remarks_etv"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/NewItemAdd"/>

    <TextView
        android:id="@+id/label10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/Mode"
        app:layout_constraintBottom_toBottomOf="@id/ModeOfPaymentChips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ModeOfPaymentChips" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/ModeOfPaymentChips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:singleLine="false"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/OrderItemsList"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/Chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/ModeCash"
            android:textSize="11sp"
            app:checkedIcon="@drawable/check" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/ModeUPI"
            android:textSize="11sp"
            app:checkedIcon="@drawable/check" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/ModeCard"
            android:textSize="11sp"
            app:checkedIcon="@drawable/check" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/ModeBank"
            android:textSize="11sp"
            app:checkedIcon="@drawable/check" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/ModeCheque"
            android:textSize="11sp"
            app:checkedIcon="@drawable/check" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/ModeMetal"
            android:textSize="11sp"
            app:checkedIcon="@drawable/check" />
    </com.google.android.material.chip.ChipGroup>


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_500"
        android:text="Save Order"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/OrderItemsList"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>