<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="640dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/popup_background"
    android:elevation="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_background"
        android:backgroundTint="@color/teal_600"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:text="@string/new_order_header"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="@id/name_etv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_etv" />

    <AutoCompleteTextView
        android:id="@+id/name_etv"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/label1"
        app:layout_constraintTop_toBottomOf="@id/header_title" />

    <TextView
        android:id="@+id/NameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="11sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/warning"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/name_etv" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone_etv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/phone_etv" />

    <AutoCompleteTextView
        android:id="@+id/phone_etv"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintTop_toBottomOf="@id/NameError" />

    <TextView
        android:id="@+id/PhoneError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="11sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/warning"
        app:layout_constraintStart_toStartOf="@id/phone_etv"
        app:layout_constraintTop_toBottomOf="@id/phone_etv" />


    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/rate"
        app:layout_constraintBottom_toBottomOf="@id/RateChoices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/RateChoices" />

    <RadioGroup
        android:id="@+id/RateChoices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/PhoneError"
        app:layout_constraintStart_toStartOf="@id/name_etv"
        app:layout_constraintEnd_toEndOf="@id/name_etv">
        <RadioButton
            android:id="@+id/RateFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Fix"/>
        <RadioButton
            android:id="@+id/RateUnFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Unfix"/>
    </RadioGroup>

    <EditText
        android:id="@+id/Rate"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/etv_background"
        android:imeOptions="actionNext"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        android:visibility="gone"
        android:inputType="numberDecimal"
        android:hint="Rate Per 10gm."
        app:layout_constraintTop_toBottomOf="@id/RateChoices"
        app:layout_constraintStart_toStartOf="@id/name_etv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/OrderDateCardView"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/Rate"
        app:layout_constraintStart_toStartOf="@id/label1">
        <EditText
            android:id="@+id/date_etv"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="@string/OrderDateString"
            android:paddingStart="6dp"
            android:inputType="date"
            android:background="@drawable/etv_background_1"/>
        <ImageButton
            android:id="@+id/datePicker"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/date"
            android:scaleType="centerInside"
            android:layout_gravity="end|center_vertical"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/DeliveryDateCardView"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/Rate"
        app:layout_constraintStart_toEndOf="@id/OrderDateCardView">
        <EditText
            android:id="@+id/delivery_date_etv"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="@string/DeliveryDate"
            android:paddingStart="8dp"
            android:inputType="date"
            android:background="@drawable/etv_background_1"/>
        <ImageButton
            android:id="@+id/delivery_datePicker"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/date"
            android:scaleType="centerInside"
            android:layout_gravity="end|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/add_item_1"
        app:layout_constraintStart_toStartOf="@id/label1"
        app:layout_constraintTop_toBottomOf="@id/OrderDateCardView"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label4"
        app:layout_constraintStart_toStartOf="@id/OrderItemsList"
        app:layout_constraintEnd_toEndOf="@id/OrderItemsList">

        <TextView
            android:id="@+id/ItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:text="Item Name."
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/ItemWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:text="N. W."/>

        <TextView
            android:id="@+id/ItemCarat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Carat"
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/ItemSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:text="Size"/>

        <ImageButton
            android:id="@+id/CameraBtn"
            android:layout_width="44dp"
            android:layout_height="2dp"
            android:layout_weight="0.05"
            android:visibility="invisible"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/OrderItemsList"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/label4"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/new_item"/>

    <Button
        android:id="@+id/AddNewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Add Item"
        android:layout_marginTop="4dp"
        android:textColor="@color/teal_500"
        android:drawableLeft="@drawable/add"
        android:drawableTint="@color/teal_500"
        app:layout_constraintTop_toBottomOf="@id/OrderItemsList"
        app:layout_constraintEnd_toEndOf="@id/OrderItemsList"/>

</androidx.constraintlayout.widget.ConstraintLayout>