<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Sr"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:visibility="gone"
        android:text="Mens Ring"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/Sr"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/BarcodeLabel"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textAllCaps="false"
        android:text="Barcode:"
        app:layout_constraintTop_toBottomOf="@id/Name"
        app:layout_constraintStart_toStartOf="@id/Name"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Barcode"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textAllCaps="true"
        android:text="MJME9999"
        app:layout_constraintTop_toTopOf="@id/BarcodeLabel"
        app:layout_constraintStart_toEndOf="@id/BarcodeLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/PurityLabel"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textAllCaps="true"
        android:text="Form:"
        app:layout_constraintTop_toBottomOf="@id/HUIDLabel"
        app:layout_constraintStart_toStartOf="@id/HUIDLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Purity"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingEnd="4dp"
        android:textAllCaps="true"
        android:text="22k916"
        app:layout_constraintTop_toBottomOf="@id/HUIDLabel"
        app:layout_constraintStart_toEndOf="@id/PurityLabel"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/GWLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="Gross:"
        app:layout_constraintTop_toBottomOf="@id/Barcode"
        app:layout_constraintStart_toStartOf="@id/Name" />
    <TextView
        android:id="@+id/GW"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="999.99"
        app:layout_constraintTop_toTopOf="@id/GWLabel"
        app:layout_constraintStart_toEndOf="@id/GWLabel"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/NWLabel"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="Net:"
        app:layout_constraintTop_toBottomOf="@id/ECLabel"
        app:layout_constraintStart_toStartOf="@id/ECLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/NW"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="999.99"
        app:layout_constraintTop_toTopOf="@id/NWLabel"
        app:layout_constraintStart_toEndOf="@id/NWLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ECLabel"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="Extra Charge:"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/Barcode"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/EC"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="9999/-"
        app:layout_constraintTop_toTopOf="@id/ECLabel"
        app:layout_constraintStart_toEndOf="@id/ECLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/CostingLabel"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="Costing:"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/HUIDLabel"
        app:layout_constraintStart_toEndOf="@id/Purity"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/Costing"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="98"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/HUIDLabel"
        app:layout_constraintStart_toEndOf="@id/CostingLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/HUIDLabel"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="HUID:"
        android:textAllCaps="true"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/EC"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/HUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="HUIDUI"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/HUIDLabel"/>

    <Button
        android:id="@+id/PrintLabel"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:drawableLeft="@drawable/print"
        android:drawablePadding="4dp"
        android:text="@string/print"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Costing"
        android:backgroundTint="@color/teal_700"/>

    <Button
        android:id="@+id/DeleteLabel"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:drawableLeft="@drawable/delete"
        android:drawablePadding="4dp"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/PrintLabel"
        app:layout_constraintTop_toBottomOf="@id/Costing"
        android:backgroundTint="@color/cool_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>