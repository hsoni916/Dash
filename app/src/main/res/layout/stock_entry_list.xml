<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720dp"
    android:layout_height="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:weightSum="6.25"
    android:background="@drawable/table_background"
    android:layout_marginTop="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:orientation="horizontal">

<TextView
        android:id="@+id/Sr"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:padding="4dp"
        android:text="1"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Name"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:text="Mens Ring"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Barcode"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:textAllCaps="true"
        android:text="MJME9999"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/Name"/>

    <TextView
        android:id="@+id/Purity"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:textAllCaps="true"
        android:text="22K916"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/Barcode"/>

    <TextView
        android:id="@+id/GW"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:text="999.99"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/Purity"/>

    <TextView
        android:id="@+id/NW"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:text="999.99"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/GW"/>

    <TextView
        android:id="@+id/EC"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:text="9999/-"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/NW"/>

    <TextView
        android:id="@+id/Costing"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:text="98"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/EC"/>

    <TextView
        android:id="@+id/HUIDLabel"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:text="HUIDHU"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/Costing"/>

</LinearLayout>