<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="horizontal"
    android:gravity="left"
    android:weightSum="3.25">

    <TextView
        android:id="@+id/Sr"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:text="1"
        android:layout_weight="0.05"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:text="Mens Ring"
        android:layout_weight="1"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Barcode"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textAllCaps="true"
        android:text="MJME9999"
        android:layout_weight="0.5"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Purity"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textAllCaps="true"
        android:text="22k916"
        android:layout_weight="0.25"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/GW"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="999.99"
        android:layout_weight="0.25"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/NW"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="999.99"
        android:layout_weight="0.25"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/EC"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="9999/-"
        android:layout_weight="0.25"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Costing"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="98"
        android:layout_weight="0.25"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/HUID"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="HUIDHU"
        android:layout_weight="0.25"
        android:background="@drawable/table_background"
        android:layout_height="wrap_content"/>

</LinearLayout>