<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/SlideInTransition"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="linear"
        motion:autoTransition="none"
        motion:layoutDuringTransition="ignoreRequest"
        motion:duration="812">
        <OnClick
            motion:targetId="@+id/OrderItem"
            motion:clickAction="transitionToEnd"/>
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/SlideOutTransition"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/end"
        motion:motionInterpolator="linear"
        motion:autoTransition="none"
        motion:layoutDuringTransition="ignoreRequest"
        motion:duration="712">
        <OnClick
            motion:targetId="@+id/close"
            motion:clickAction="transitionToEnd"/>
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/expanded_order_view"
            android:elevation="8dp"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/expanded_order_view"
            android:elevation="8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginStart="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:transitionEasing="linear"
            motion:layout_constraintStart_toStartOf="@id/center" />
    </ConstraintSet>
</MotionScene>